<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.epic.score_app"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />
  <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
   <activity
            android:name="com.epic.score_app.view.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.epic.score_app.view.ViewPlayersActivity"
            android:label="@string/title_activity_view_player" >
        </activity>
        <activity
            android:name="com.epic.score_app.TempViewPlayers"
            android:label="@string/title_activity_temp_view_players" >
        </activity>

        <service
            android:name="com.epic.score_app.services.NotificationProvider"
            android:icon="@drawable/abc_ic_go"
            android:label="serviceprovider" >
        </service>

        <activity
            android:name="com.epic.score_app.ViewPlayer"
            android:label="@string/title_activity_view_player" >
        </activity>
    </application>

</manifest>

