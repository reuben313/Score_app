<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    >

    <ImageView
        android:id="@+id/wallof_image"
        android:layout_width="wrap_content"
        android:layout_height="269dp"
        android:layout_weight="0.84" />

    <LinearLayout
        android:id="@+id/wallof_horizontal_button_panel"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="0.84"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/wallof_like_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/abc_ic_cab_done_holo_light" />

        <TextView
            android:id="@+id/wallof_like_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <TextView
            android:id="@+id/wallof_dislike_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <ImageButton
            android:id="@+id/wallof_dislike_button"
            android:layout_width="61dp"
            android:layout_height="50dp"
            android:src="@drawable/abc_ic_clear_search_api_holo_light" />

    </LinearLayout>

  


</LinearLayout>