<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
      android:layout_gravity="center"
         android:orientation="horizontal" >

       
           <ImageView
        android:id="@+id/wallof_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       
        />

          
        
    </LinearLayout>

 

    <LinearLayout
        android:id="@+id/wallof_horizontal_button_panel"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
     
        android:orientation="horizontal" 
        android:layout_gravity="center">

         <ImageButton
            android:id="@+id/wall_of_left_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           
            android:src="@drawable/abc_ic_ab_back_holo_light" />
         
        
        <ImageButton
            android:id="@+id/wallof_like_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/abc_ic_cab_done_holo_light" />

        <TextView
            android:id="@+id/wallof_like_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <TextView
            android:id="@+id/wallof_dislike_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <ImageButton
            android:id="@+id/wallof_dislike_button"
            android:layout_width="61dp"
            android:layout_height="50dp"
            android:src="@drawable/abc_ic_clear_search_api_holo_light" />
      
         <ImageButton
               android:id="@+id/wall_of_right_arrow"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_weight="0.84"
               android:src="@drawable/arrow" />
        
    </LinearLayout>

  


</LinearLayout>