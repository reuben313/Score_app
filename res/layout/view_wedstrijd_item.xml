<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

     
          <TextView
              android:id="@+id/matchdatum"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentLeft="true"
              android:text="match datum" />
          
              <TextView
        android:id="@+id/tijd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="tijd" />
          
  
    <TextView
        android:id="@+id/versus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/uitploeg"
        android:layout_alignBottom="@+id/uitploeg"
        android:layout_centerHorizontal="true"
        android:text="VS" />

    

    <TextView
        android:id="@+id/thuisploeg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:layout_alignParentLeft="true"
        android:text="thuisploeg" />

 

    <TextView
        android:id="@+id/uitploeg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/thuisploeg"
        android:layout_alignBottom="@+id/thuisploeg"
        android:layout_alignParentRight="true"
        android:text="uitploeg" />

    <ImageView
        android:id="@+id/team1_flag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tijd"
        android:layout_marginLeft="28dp"
        android:layout_toRightOf="@+id/versus"
        android:src="@drawable/settings" />

    <ImageView
        android:id="@+id/team2_flag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/matchdatum"
        android:layout_marginRight="15dp"
        android:layout_toLeftOf="@+id/versus"
        android:src="@drawable/settings" />

</RelativeLayout>
